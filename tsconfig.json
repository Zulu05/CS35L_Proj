{
  "compilerOptions": {
    "target": "ES2020",           // JS version to output
    "module": "commonjs",         // Use CommonJS modules
    "rootDir": "./src",           // Your TypeScript source folder
    "outDir": "./dist",           // Where JS files go if you compile
    "strict": true,               // Enable strict type-checking
    "esModuleInterop": true,      // Needed for default imports like express
    "skipLibCheck": true          // Skip type checking of node_modules
  },
  "include": ["src/**/*.ts"],     // Include all .ts files under src
  "exclude": ["node_modules"]     // Exclude dependencies
}